<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.EmployeeController">
    <center>
        <ListView fx:id="employeeListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
            <Button fx:id="addButton" mnemonicParsing="false" text="Add" />
            <Button fx:id="modifyButton" mnemonicParsing="false" text="Modify" />
            <Button fx:id="removeButton" mnemonicParsing="false" text="Remove" />
            <Button fx:id="viewButton" mnemonicParsing="false" text="View" />
         <Button fx:id="BackButton" mnemonicParsing="false" onAction="#goBack" text="Back" />
        </HBox>
    </bottom>
</BorderPane>
